<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">


    <include layout="@layout/main_screen_toolbar"/>



    <RelativeLayout android:layout_height="wrap_content"
        android:layout_width="match_parent">

    <ImageView android:layout_height="300dp" android:layout_width="match_parent" android:scaleType="fitCenter"
        android:src="@drawable/signup_photo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" android:id="@+id/reg_img"
        android:layout_marginTop="43dp"

        />


    <EditText android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/emailR"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp" android:inputType="textEmailAddress"
        android:textSize="30dp"
        android:layout_marginTop="40dp"
        android:layout_below="@id/reg_img" android:hint="Plz Enter Email..."


        />

    <EditText android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/passwdR" android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp" android:inputType="textPassword"
        android:textSize="30dp" android:layout_marginTop="10dp"
        android:layout_below="@id/emailR"
        android:hint="Plz Enter passwd..." android:padding="4dp"/>

        <EditText android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/passwdConfirm" android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp" android:inputType="textPassword"
            android:textSize="30dp" android:layout_marginTop="10dp"

            android:layout_below="@id/passwdR"
            android:hint="Confirm Passwd" android:padding="4dp"/>

    <Button android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/login_ButtonR"
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttons"
        android:layout_below="@id/passwdConfirm"
        android:padding="4dp"

        android:textAppearance="@style/TextAppearance.AppCompat" android:text="Create Account" android:textStyle="bold"/>

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:id="@+id/AlreadyhaveanAccount"
        android:layout_marginRight="7dp"
        android:textSize="17sp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/login_ButtonR"
        android:text="Already Have An Account?" android:textStyle="italic"/>

</RelativeLayout>





</RelativeLayout>