<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">


    <include layout="@layout/app_tool_bar"
        android:id="@+id/Settings_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/Settings_toolbar"
        android:layout_marginTop="-1dp">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <de.hdodenhof.circleimageview.CircleImageView
               android:layout_width="250dp"
               android:layout_height="250dp"
               android:layout_alignParentTop="true"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="10dp"
               android:id="@+id/Settings_profileImg"
               android:src="@drawable/profilelight"


               />
           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/profile_status"
               android:layout_below="@+id/Settings_profileImg"
               android:layout_marginTop="20dp"
               android:background="@drawable/inputs"
               android:textSize="30sp"
               android:textColor="@color/Haldi"
               android:padding="27dp"
               android:hint="status..."
               android:layout_marginRight="40dp"
               android:layout_marginLeft="40dp"




               />
           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/profile_username"
               android:layout_below="@+id/profile_status"
               android:layout_marginTop="10dp"
               android:background="@drawable/inputs"

               android:textSize="20sp"
               android:textColor="@color/Haldi"
               android:padding="12dp"
               android:hint="username"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="10dp"




               />
           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/profile_fullname"
               android:layout_below="@+id/profile_username"
               android:layout_marginTop="10dp"
               android:background="@drawable/inputs"

               android:textSize="20sp"
               android:textColor="@color/Haldi"
               android:padding="12dp"
               android:hint="fullname"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="10dp"




               />
           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/profile_country"
               android:layout_below="@+id/profile_fullname"
               android:layout_marginTop="10dp"
               android:background="@drawable/inputs"

               android:textSize="20sp"
               android:textColor="@color/Haldi"
               android:padding="12dp"
               android:hint="country"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="10dp"




               />
           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/profile_dob"
               android:layout_below="@+id/profile_country"
               android:layout_marginTop="10dp"
               android:background="@drawable/inputs"

               android:textSize="20sp"
               android:textColor="@color/Haldi"
               android:padding="12dp"
               android:hint="Date of Birth"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="10dp"




               />
           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/profile_gender"
               android:layout_below="@+id/profile_dob"
               android:layout_marginTop="10dp"
               android:background="@drawable/inputs"

               android:textSize="20sp"
               android:textColor="@color/Haldi"
               android:padding="12dp"
               android:hint="gender"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="10dp"




               />

           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/profile_relationship"
               android:layout_below="@+id/profile_gender"
               android:layout_marginTop="10dp"
               android:background="@drawable/inputs"

               android:textSize="20sp"
               android:textColor="@color/Haldi"
               android:padding="12dp"
               android:hint="Relationship Status"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="10dp"




               />

           <Button
               android:layout_width="100dp"
               android:layout_height="60dp"
               android:id="@+id/sv"
               android:layout_below="@+id/profile_relationship"
               android:text="update Info"
               android:layout_centerInParent="true"
               android:textStyle="bold"
               android:background="@drawable/inputs"
               android:layout_marginTop="5dp"


               />






           
       </RelativeLayout>
    </ScrollView>


</RelativeLayout>